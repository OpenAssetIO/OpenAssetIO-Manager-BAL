root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 99
tab_width = 4
trim_trailing_whitespace = true

# For docstrings and comments.
ij_visual_guides = 72

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
max_line_length = 72
